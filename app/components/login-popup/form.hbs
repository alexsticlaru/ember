<form {{on "submit" this.authenticate}} class="login-form">
  <LabelTextField
  @redesign={{true}}
    @labelText={{t 'login.email'}}
    @id="identification"
    @value={{this.identification}}
    @placeholder={{t 'login.placeholder.email'}}
    @maxlength={{180}}
    @showErrorMessage={{and this.showErrorMessages (not this.isEmailValid)}}
    @errorMessage={{t 'login.emailRequired'}} />
  <LabelTextField
  @redesign={{true}}
    @labelText={{t 'login.password'}}
    @id="password"
    @value={{this.password}}
    @placeholder={{t 'login.placeholder.password'}}
    @maxlength={{255}}
    @type='password'
    @showErrorMessage={{and this.showErrorMessages (not this.isPasswordValid)}}
    @errorMessage={{t 'login.passwordRequired'}} />
  {{#if this.errorMessage}}
    <p class="login-form__error-message">{{this.errorMessage}}</p>
  {{/if}}

