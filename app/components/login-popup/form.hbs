	<a {{on "click" @onPasswordLostClick}}>
		{{t 'login.forgotPassword'}}
	</a>
  </div>
  --}}
  <div class="login-form__password-lost-btn__container">
	<button {{on 'click' this.onPasswordLostClick}} type="button" class="btn-none login-form__password-lost-btn">
			{{t 'login.forgotPassword'}}
	</button>
  </div>
  	<SpinnerButton
		@submitType={{true}}
		@class="btn-civ-black login-form__btn"
		@spinning={{this.showSpinner}}
	>
		<span>{{t 'login.buttons.login'}}</span>
	</SpinnerButton>
