<div class="popup__content" role="dialog" aria-labelledby="accessibility-title">
	<div class="popup__header">
		<span/>
		<h1 class="heading-1--quaternary popup__title" id="accessibility-title">{{t 'password.recovery.title'}}</h1>
		<PopupCloseButton @closePopup={{this.hideModal}} />
	</div>
	<form class="recovery-form" {{on 'submit' this.submitPopup}}>
		<LabelTextField
			@labelText={{t 'login.email'}}
			@id="recoveryEmail"
			@value={{this.email}}
			@placeholder={{t 'placeholder.email'}}
			@maxlength={{180}}
			@showErrorMessage={{this.showEmailRequiredMessage}}
			@errorMessage={{t 'login.emailRequired'}}
			@onChange={{this.validateEmail}} />
		<button type="submit" class="btn-civ-black recovery-form__btn-send">
				<div>
					{{inline-svg "images/inbox.svg" class="icon icon--white"}}
					<span class="recovery-form__btn-text">{{t 'buttons.sendLink'}}</span>
				</div>
				{{#if this.showSpinner}}
					<Spinner/>
				{{/if}}
		</button>

	</form>
</div>
