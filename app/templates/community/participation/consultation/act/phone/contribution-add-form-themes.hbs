<div class="contribution-add-form">
	<div class="contribution-add-form__top-container">
		<span class="contribution-add-form__back-button">
			<button type="button" class="btn-close" {{on "click" this.closePopup}}>
				{{inline-svg "/images/back-arrow.svg"}}
			</button>
		</span>
		<button type="button" class="btn-none contribution-add-form__add-button" {{on "click" this.closePopup}}>
			{{t 'issue.contributionAddForm.addThemesTitle'}}
		</button>
	</div>
	<br>
	<div class="contribution-add-form__contribution-themes">
		{{#each this.model.themes as |theme|}}
			<ThemeItem::select-theme @theme={{theme}} @handleClick={{this.selectTheme}}/>
		{{/each}}
	</div>
</div>
